{
  "name": "one-hook",
  "private": true,
  "type": "module",
  "version": "0.0.17",
  "scripts": {
    "align": "bun scripts/align-all-package-json.ts",
    "build": "pnpm run align && turbo --filter \"./packages/*\" build",
    "bumpp": "bumpp --recursive --no-commit --no-push --no-tag",
    "clean": "rm -rf node_modules packages/*/node_modules docs/*/node_modules",
    "dev:storage": "pnpm run align && turbo --filter \"./packages/use-storage\" dev",
    "dev:docs": "cd docs && pnpm run docs",
    "dev:hooks": "pnpm run align && turbo --concurrency 50 --filter \"./packages/*\" dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:eslint": "turbo lint:eslint",
    "lint:typescript": "turbo lint:typescript",
    "release": "pnpm align && git pull && pnpm bumpp && bun scripts/release-all.ts && git add . && git commit -a  && git push && pnpm release:tag",
    "release:tag": "git tag v$npm_package_version && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/L-Blondy/one-hook"
  },
  "homepage": "https://github.com/L-Blondy/one-hook",
  "bugs": {
    "url": "https://github.com/L-Blondy/one-hook/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@next/eslint-plugin-next": "^15.2.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.11",
    "@types/react": ">=18.0.0 || >=19.0.0",
    "@types/react-dom": ">=18.0.0 || >=19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/eslint-plugin": "^1.1.38",
    "bumpp": "^10.1.0",
    "concurrently": "^9.1.2",
    "consola": "^3.4.2",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-3229e95-20250315",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-turbo": "^2.4.4",
    "globals": "^16.0.0",
    "ignore": "^7.0.3",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.27.0",
    "valibot": "^1.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.9",
    "zod": "^3.25.51"
  },
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">=18"
  }
}
