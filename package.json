{
  "name": "rebase",
  "private": true,
  "type": "module",
  "version": "0.0.1-beta.2",
  "scripts": {
    "align": "bun scripts/align-all-package-json.ts",
    "build": "pnpm run align && turbo --filter \"./packages/*\" build",
    "bumpp": "bumpp --recursive",
    "dev": "pnpm run align && turbo --concurrency 40 dev",
    "dev:packages": "pnpm run align && turbo --concurrency 40 --filter \"./packages/*\" dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "lint:eslint": "turbo lint:eslint",
    "lint:typescript": "turbo lint:typescript",
    "release": "bun scripts/release-all.ts && git add . && git commit -a && git push"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@next/eslint-plugin-next": "^15.1.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.4",
    "@types/react": ">=18.0.0 || >=19.0.0",
    "@types/react-dom": ">=18.0.0 || >=19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/eslint-plugin": "^1.1.31",
    "bumpp": "^10.0.3",
    "concurrently": "^9.1.2",
    "consola": "^3.4.0",
    "eslint": "^9.20.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "19.0.0-beta-30d8a17-20250209",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-turbo": "^2.4.0",
    "globals": "^15.15.0",
    "ignore": "^7.0.3",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tsup": "^8.3.6",
    "turbo": "^2.4.2",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.23.0",
    "valibot": "^1.0.0-rc.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=18"
  }
}
